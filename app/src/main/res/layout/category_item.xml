<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
     <TextView
        android:id="@+id/textCategoryTitle"
        android:layout_alignBottom="@+id/imageCategoryIcon"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        style="@style/BellappTextViewHeader"
        android:layout_marginLeft="10dp"
         android:maxLines="4"
         android:singleLine="false"
        android:text="Example.."/>
    <ImageView
        android:id="@+id/imageCategoryIcon"
        android:layout_toRightOf="@+id/textCategoryTitle"
        android:layout_toLeftOf="@+id/accessory"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitCenter"
        android:src="@drawable/category_placeholder"/>
    <ImageView
        android:id="@+id/accessory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/accessory_small"/>
</RelativeLayout>