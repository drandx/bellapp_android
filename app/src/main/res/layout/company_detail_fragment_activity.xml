<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/topContainer"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageButton
                android:id="@+id/icFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:src="@drawable/icono_favoritos_off"/>
            <TextView
                android:id="@+id/textCompanyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icFavorite"
                android:layout_centerVertical="true"
                style="@style/BellappTextViewHeaderBlack"
                android:layout_marginLeft="10dp"
                android:text="Example."/>
        </RelativeLayout>
        <TextView
            android:id="@+id/textCategoryTitle"
            android:layout_alignBottom="@+id/imageCategoryIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BellappTextViewHeaderBold"
            android:layout_marginLeft="10dp"
            android:maxLines="4"
            android:singleLine="false"
            android:text="Example example example example example example example."/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageCategoryIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/category_placeholder"/>
        <ImageView
            android:id="@+id/accessory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/accessory"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icMapImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_map_light"/>
        <TextView
            android:id="@+id/textAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            style="@style/BellappTextViewHeaderBold"
            android:layout_toRightOf="@id/icMapImage"
            android:maxLines="4"
            android:singleLine="false"
            android:text="Address line 1."/>
        <TextView
            android:id="@+id/textNeighborhood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            style="@style/BellappTextViewHeaderBold"
            android:layout_toRightOf="@id/icMapImage"
            android:layout_below="@+id/textAddress"
            android:maxLines="4"
            android:singleLine="false"
            android:text="Address line 2."/>
        <TextView
            android:id="@+id/textCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            style="@style/BellappTextViewHeaderBold"
            android:layout_toRightOf="@id/icMapImage"
            android:layout_below="@+id/textNeighborhood"
            android:maxLines="4"
            android:singleLine="false"
            android:text="Address line 3."/>


    </RelativeLayout>
</LinearLayout>