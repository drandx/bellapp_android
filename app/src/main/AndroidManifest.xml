<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lap.bellapp.bellapp_android" >
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:name=".presentation.view.activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".presentation.view.activity.HomeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".presentation.view.activity.AppointmentDetailFragmentActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".presentation.view.activity.StaffLoginFragmentActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>